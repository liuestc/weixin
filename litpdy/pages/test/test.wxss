.body{
  background:#ddd;
}

.wrapper{
  width:100%;
  height:150px;
  position:absolute;
  left:50%;
  bottom:0%;
   transform: translate(-50%,0%); 
   background:#33B95D;
  /* background-image: linear-gradient(to top ,#accbee 0%, #e7f0fd 100%); */
  /* overflow:hidden; */


}

.wave{
  width:600px;
  height:600px;
  position: absolute;
  /* top:90%;
  left:50%;
  margin-left:-300px;
  margin-top:-100px;   */
  border-radius:50%;
  background:rgba(51,185,93,.1);
  
}

.wave1{
  top:90%;
  left:50%;
  margin-left:-300px;
  margin-top:-100px; 
  animation:wave 10s infinite linear;
}

.wave2{
  /* top:90%; */
  left:30%;
  margin-left:-300px;
  margin-top:-120px; 
  background:rgba(51,185,93,.5);
  top:85%;  
   animation:wave2 10s infinite linear; 
}

@keyframes wave{
  from {
    transform:rotate(0deg) translate(0)
  }

  from{
    transform:rotate(360deg) translate(20%)
  }
}

@keyframes wave2{
  from {
    transform:rotate(0deg) translate(0)
  }

  from{
    transform:rotate(360deg) translate(10%)
  }
}


.canvas {
    box-sizing: content-box;
    padding: 5px;
    background-color: #fff;
    border-radius: 100%;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    border: 10px solid rgba(154, 205, 50, .8);  
}