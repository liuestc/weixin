/* pages/list/list.wxss */

.list-wrapper{
  background: #F1F1F1 ;
}

swiper{
  height:380rpx;
}
.swiper-img{
  width:100%;
  height:380rpx;
}

.my-data{
  position: relative;
  overflow: hidden;
  padding:23rpx 67rpx 23rpx 75rpx;
  /* border-bottom:1rpx solid #8A8A8A; */
  background: #fff;
}
.my-data>image{
  width:100rpx;
  height:100rpx;
  border-radius:50%;
  /* padding:23rpx 28rpx 23rpx 75rpx; */
  vertical-align: middle;
  float: left;
  padding-right:28rpx;
}

.info-wrapper{
   display: inline-block; 
   vertical-align: middle; 
   /* line-height: 100rpx; */
   height: 100rpx;
}

.name{
  font-size:33rpx;
  vertical-align:middle;
display:inline-block;

}
.rank{
  font-size:26rpx;
    color:#8A8A8A ;
}
.visibility{
  height:100%;
  vertical-align: middle;
  width:0;
  display: inline-block;
}
.step{
  display: inline-block;
  float:right; 
  /* padding-right:64rpx; */
  vertical-align: middle;
  line-height: 100rpx;
  color:#33B95D ;

}


.list-data{
  margin-top:20rpx;
height:585rpx;
overflow:scroll;

}
.list-data>.my-data{
  /* margin-top:20rpx; */
  border-bottom:1rpx solid #F1F1F1 ;
}
.list-data .my-data .step{
  color:#ffac34;
  /* #F1F1F1  */
}

.num{
  color:#8A8A8A ;
  position:absolute;
left:32rpx;
top:50%;
transform:translateY(-50%);
font-size:28rpx;

}

.footer{
  position: fixed;
  bottom:0;
  width:100%;
  height:98rpx;
  border-top:1rpx solid #F1F1F1;
  z-index:100;
  overflow: hidden;
  background:#FFF;
/* z-index:10; */



}
.footer>view{
  display: inline-block;
  width:50%;
  text-align: center;
}
.tab{
  font-size:20rpx;
}
.tab>image{
  width:60rpx;
  height:60rpx;
}